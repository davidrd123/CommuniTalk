<%== erb :posts %>

<% content_for :header_links do %>
  <section id="forum-actions">
    <table class="full-width post-list columns">
      <tr>
        <td class="left-align" width="70%">
          <form class="search-form" action="/search" method="get">
            <input type="search" name="query" placeholder="Search" value="<%= params[:query] %>" />
            <input type="submit" value="Search" />
          </form>
        </td>
        <td>
          <a href="/posts/new" class="new-post">New Post</a>
        </td>
    </table>
  </section>
<% end %>